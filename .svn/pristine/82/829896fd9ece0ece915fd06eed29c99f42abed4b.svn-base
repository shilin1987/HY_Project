        /// <returns></returns>
        public void SaveEntity(string keyValue, SR_RecordOperatorRecruitmentProcessEntity entity)
        {
            try
            {
                if (!string.IsNullOrEmpty(keyValue))
                {
                    entity.Modify(keyValue);
                    this.BaseRepository().Update(entity);
