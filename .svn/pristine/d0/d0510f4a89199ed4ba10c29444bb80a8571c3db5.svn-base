                      ,t.[F_InternalTitleDate]
                      ,t.[F_SocialTitleType]
                      ,t.[F_SocialTitle]
                      ,t.[F_SocialTitleDate]
                      ,t.[F_IDCardAddress]
                      ,t.[F_PermanentAddress]
                      ,t.[F_ResidentialAddress]
                      ,t.[F_CurrentAddress]
                      ,t.[F_EmergencyContact]
                      ,t.[F_EContactRelationship]
                      ,t.[F_EContactNumber]
                      ,t.[F_ContactAddress]
