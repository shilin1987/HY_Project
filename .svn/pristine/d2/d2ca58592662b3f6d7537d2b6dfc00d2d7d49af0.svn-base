    public class B2B_PLAN_MATERIAL_MERGE_REPORTController : MvcControllerBase
    {
        private B2B_PLAN_MATERIAL_MERGE_REPORTIBLL b2B_PLAN_MATERIAL_MERGE_REPORTIBLL = new B2B_PLAN_MATERIAL_MERGE_REPORTBLL();

        #region 视图功能

        /// <summary>
