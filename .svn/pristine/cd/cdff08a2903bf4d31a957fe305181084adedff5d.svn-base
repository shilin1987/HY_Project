</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/ImgShow/Demo3.js")
<style>
    body {
        padding: 5px;
        overflow: auto;
    }

    img {
        position: relative;
        height: 100%;
        width: 100%;
    }

    .node {
        position: absolute;
        top: 0;
        left: 0;
        font-size: 20px;
        color: #00ff21;
    }
</style>