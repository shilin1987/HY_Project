                    entity.F_WRITE_DATE = Convert.ToString(DateTime.Now);
                    db.Insert(entity);
                    foreach (B2B_PLAN_INCOMING_MATERIAL_SUBEntity item in b2B_PLAN_INCOMING_MATERIAL_SUBEntity)
