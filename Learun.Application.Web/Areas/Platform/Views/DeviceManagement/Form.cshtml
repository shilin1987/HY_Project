@{
    ViewBag.Title = "设备管理";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item"  data-table="Hy_DeviceInfo" >
        <div class="lr-form-item-title">设备编号<font face="宋体">*</font></div>
        <input id="F_DeviceCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
