        <div class="lr-form-item-title">设备名称<font face="宋体">*</font></div>
        <input id="F_DeviceName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Hy_DeviceInfo" >
        <div class="lr-form-item-title">设备功能<font face="宋体">*</font></div>
        <div id="F_Function" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="Hy_DeviceInfo" >
        <div class="lr-form-item-title">设备描述</div>
        <textarea id="F_Description" class="form-control" style="height:100px;"  ></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/Platform/Views/DeviceManagement/Form.js")
