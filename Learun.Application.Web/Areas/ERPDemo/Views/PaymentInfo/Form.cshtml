@{
    ViewBag.Title = "付款单";
    Layout = "~/Views/Shared/_Form.cshtml";
}
    <div class="lr-form-wrap" id="form">
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PaymentInfo">
            <div class="lr-form-item-title">单据编号<font face="宋体">*</font></div>
            <input id="F_PurchaseNo" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PaymentInfo">
            <div class="lr-form-item-title">主题<font face="宋体">*</font></div>
            <input id="F_Theme" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PaymentInfo">
            <div class="lr-form-item-title">支付方式<font face="宋体">*</font></div>
            <div id="F_PurchaseType" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PaymentInfo">
            <div class="lr-form-item-title">付款日期<font face="宋体">*</font></div>
            <input id="F_ApplyDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#F_ApplyDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PaymentInfo">
            <div class="lr-form-item-title">付款人<font face="宋体">*</font></div>
            <div id="F_Appler" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PaymentInfo">
            <div class="lr-form-item-title">付款单位<font face="宋体">*</font></div>
            <div id="F_Department" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PaymentInfo">
            <div class="lr-form-item-title">付款金额<font face="宋体">*</font></div>
            <input id="F_Total" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-12 lr-form-item lr-form-item-grid">
            <div id="LR_ERP_PaymentInfoDetail"></div>
        </div>
        <div class="col-xs-12 lr-form-item" data-table="LR_ERP_PaymentInfo">
            <div class="lr-form-item-title">备注</div>
            <textarea id="F_Description" class="form-control" style="height:100px;"></textarea>
        </div>

    </div>
@Html.AppendJsFile("/Areas/ERPDemo/Views/PaymentInfo/Form.js")
