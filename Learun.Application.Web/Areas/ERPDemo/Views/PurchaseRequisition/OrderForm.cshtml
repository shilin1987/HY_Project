@{
    ViewBag.Title = "采购申请";
    Layout = "~/Views/Shared/_Form.cshtml";
}
    <div class="lr-form-wrap" id="form">
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">单据编号<font face="宋体">*</font></div>
            <input id="F_PurchaseNo" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">申请日期<font face="宋体">*</font></div>
            <input id="F_ApplyDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#F_ApplyDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">主题<font face="宋体">*</font></div>
            <input id="F_Theme" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">采购类别<font face="宋体">*</font></div>
            <div id="F_PurchaseType" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">申请人<font face="宋体">*</font></div>
            <div id="F_Appler" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">申请单位<font face="宋体">*</font></div>
            <div id="F_Department" isvalid="yes" checkexpession="NotNull"></div>
        </div>

        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">采购员<font face="宋体">*</font></div>
            <div id="F_Purchaser" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">支付方式<font face="宋体">*</font></div>
            <div id="F_PaymentType" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">总价(元)<font face="宋体">*</font></div>
            <input id="F_Total" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">交货日期<font face="宋体">*</font></div>
            <input id="F_DeliveryDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#F_DeliveryDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-12 lr-form-item lr-form-item-grid">
            <div id="LR_ERP_ProductInfo"></div>
        </div>

        <div class="col-xs-6 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">对方代表</div>
            <input id="F_Your" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">附件上传</div>
            <div id="F_File"></div>
        </div>       
        <div class="col-xs-12 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <div class="lr-form-item-title">备注</div>
            <textarea id="F_Description" class="form-control" style="height:100px;"></textarea>
        </div>

        <div class="col-xs-12 lr-form-item" data-table="LR_ERP_PurchaseRequisition">
            <input id="F_PRId" type="hidden" class="form-control" />
        </div>
    </div>
    @Html.AppendJsFile("/Areas/ERPDemo/Views/PurchaseRequisition/OrderForm.js")
