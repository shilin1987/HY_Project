@{
    ViewBag.Title = "看板配置信息";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@Html.AppendCssFile("/Areas/LR_DisplayBoard/Views/LR_KBConfigInfo/TableForm.css")
<div class="widget-body">
    <div id="wizard" class="wizard" data-target="#wizard-steps">
        <ul class="steps">
            <li data-target="#step-1" class="active"><span class="step">1</span>基础信息<span class="chevron"></span></li>
            <li data-target="#step-2"><span class="step">2</span>数据配置<span class="chevron"></span></li>
        </ul>
    </div>
    <div class="step-content" id="wizard-steps">
        <div class="step-pane lr-form-wrap active" id="step-1">
            <div class="col-xs-12 lr-form-item kanbanitem">
                <div class="lr-form-item-title">模块名称<font face="宋体">*</font></div>
                <input id="F_ModeName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </div>
            <div class="col-xs-12 lr-form-item kanbanitem">
                <div class="lr-form-item-title">模块上边距<font face="宋体">*</font></div>
                <input id="F_TopValue" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
            </div>
            <div class="col-xs-12 lr-form-item kanbanitem">
                <div class="lr-form-item-title">模块左边距<font face="宋体">*</font></div>
                <div id="F_LeftValue" isvalid="yes" checkexpession="NotNull">
                    <ul>
                        <li data-value="0">0</li>
                        <li data-value="1/4">25%</li>
                        <li data-value="1/3">33%</li>
                        <li data-value="1/2">50%</li>
                        <li data-value="2/3">66%</li>
                        <li data-value="3/4">75%</li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-12 lr-form-item kanbanitem">
                <div class="lr-form-item-title">模块宽度<font face="宋体">*</font></div>
                <div id="F_WidthValue" isvalid="yes" checkexpession="NotNull">
                    <ul>
                        <li data-value="1">100%</li>
                        <li data-value="3/4">75%</li>
                        <li data-value="2/3">66%</li>
                        <li data-value="1/2">50%</li>
                        <li data-value="1/3">33%</li>
                        <li data-value="1/4">25%</li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-12 lr-form-item kanbanitem">
                <div class="lr-form-item-title">模块高度<font face="宋体">*</font></div>
                <input id="F_HightValue" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
            </div>
            <div class="col-xs-12 lr-form-item">
                <div class="lr-form-item-title">刷新时间</div>
                <input id="F_RefreshTime" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
                <span class="lr-form-item-btn">分钟</span>
            </div>
            <div class="col-xs-12 lr-form-item">
                <div class="lr-form-item-title">跳转链接</div>
                <input id="F_LinkInfo" type="text" class="form-control" />
            </div>
        </div>
        <div class="step-pane step-gird-pane" id="step-2">
            <div class="lr-form-layout">
                <div class="lr-form-layout-header" id="tabconfigration">
                    <div class="col-xs-12 lr-form-item">
                        <div class="lr-form-item-title">选项</div>
                        <div class="radio">
                            <label>
                                <input name="radio" value="sql" type="radio" checked>
                                SQL语句
                            </label>
                            <label>
                                <input name="radio" value="api" type="radio">
                                接口地址
                            </label>
                        </div>
                    </div>
                    <div id="db" class="col-xs-12 lr-form-item">
                        <div class="lr-form-item-title">数据库</div>
                        <div id="F_DataSourceId"></div>
                    </div>
                    <div id="sql" class="col-xs-12 lr-form-item">
                        <div class="lr-form-item-title">SQL语句</div>
                        <textarea id="F_Sql" class="form-control" style="height: 90px;"></textarea>
                    </div>
                    <div id="api" class="col-xs-12 lr-form-item">
                        <div class="lr-form-item-title">接口地址</div>
                        <input id="F_Interface" type="text" class="form-control" />
                        <div id="lr-info" class="info">
                            <i class="fa fa-info-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="lr-form-layout-body">
                    <div class="lr-form-layout-body-title">
                        <span>字段配置</span>
                    </div>
                    <div id="btns_girdtable"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="lr-form-bottom-button" id="wizard-actions">
        <a id="btn_prev" class="btn btn-default btn-prev" disabled>上一步</a>
        <a id="btn_next" class="btn btn-default btn-next">下一步</a>
        <a id="btn_finish" class="btn btn-success" disabled>完成</a>
    </div>
</div>
<div id="lr-message" class="info-message table-info-message">
    <p>请按如下规则填写接口</p>
    <p class="ok">所用接口为GET请求,返回参数如下:</p>
    <p class="ok">{</p>
    <p class="ok">"code":200,</p>
    <p class="ok">"info":"响应成功",</p>
    <p class="ok">"data":[</p>
    <p class="ok">{...},</p>
    <p class="ok">{...},</p>
    <p class="ok">.......</p>
    <p class="ok">]</p>
    <p class="ok">}</p>
</div>
@Html.AppendJsFile("/Areas/LR_DisplayBoard/Views/LR_KBConfigInfo/TableForm.js")
