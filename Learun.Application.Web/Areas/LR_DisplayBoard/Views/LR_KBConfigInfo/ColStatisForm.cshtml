@{
    ViewBag.Title = "ColStatisForm";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@Html.AppendCssFile("/Areas/LR_DisplayBoard/Views/LR_KBConfigInfo/ColStatisForm.css")
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">显示标题<font face="宋体">*</font></div>
        <input id="F_Title" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">选项</div>
        <div class="radio">
            <label>
                <input name="radio" value="sql" type="radio" checked>
                SQL语句
            </label>
            <label>
                <input name="radio" value="api" type="radio">
                接口地址
            </label>
        </div>
    </div>
    <div id="db" class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">显示值数据库</div>
        <div id="F_TBaseData"></div>
    </div>
    <div id="sql" class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">显示值Sql</div>
        <textarea id="F_TSQL" class="form-control" style="height: 100px;"></textarea>
    </div>
    <div id="api" class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">显示值接口</div>
        <input id="F_TInterface" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">显示值对应字段<font face="宋体">*</font></div>
        <div id="F_TitleValue" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">副显示标题<font face="宋体">*</font></div>
        <input id="F_Subtitle" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">选项</div>
        <div class="radio">
            <label>
                <input name="radiot" value="sql" type="radio" checked>
                SQL语句
            </label>
            <label>
                <input name="radiot" value="api" type="radio">
                接口地址
            </label>
        </div>
    </div>
    <div id="dbt" class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">副显示值数据库</div>
        <div id="F_SBaseData"></div>
    </div>
    <div id="sqlt" class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">副显示值Sql</div>
        <textarea id="F_SubSQL" class="form-control" style="height: 100px;"></textarea>
    </div>
    <div id="apit" class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">副显示值接口</div>
        <input id="F_SInterface" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">副显示值对应字段<font face="宋体">*</font></div>
        <div id="F_SubtitleValue" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">跳转链接</div>
        <input id="F_Link" type="text" class="form-control" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_DisplayBoard/Views/LR_KBConfigInfo/ColStatisForm.js")

