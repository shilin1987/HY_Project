    <div class="lr-box">
        <div class="lr-cover-box" data-value="one">
            <div class="lr-cover-img">
                <img class="lr-cover-img1" src="~/Content/images/kanban/Template1-1.png" />
                <img class="lr-cover-img2" src="~/Content/images/kanban/Template1-0.png" />
            </div>
            <div class="lr-cover-info">
                <small>模板一</small>
            </div>
        </div>
        <div class="lr-cover-box" data-value="two">
            <div class="lr-cover-img">
                <img class="lr-cover-img1" src="~/Content/images/kanban/Template2-1.png" />
                <img class="lr-cover-img2" src="~/Content/images/kanban/Template2-0.png" />
            </div>
            <div class="lr-cover-info">
                <small>模板二</small>
            </div>
        </div>
        <div class="lr-cover-box" data-value="three">
            <div class="lr-cover-img">
                <img class="lr-cover-img1" src="~/Content/images/kanban/Template3-1.png" />
                <img class="lr-cover-img2" src="~/Content/images/kanban/Template3-0.png" />
            </div>
            <div class="lr-cover-info">
                <small>模板三</small>
            </div>
        </div>
        <div class="lr-cover-box" data-value="four">
            <div class="lr-cover-img">
                <img class="lr-cover-img1" src="~/Content/images/kanban/Template4-1.png" />
                <img class="lr-cover-img2" src="~/Content/images/kanban/Template4-0.png" />
            </div>
            <div class="lr-cover-info">
                <small>模板四</small>
            </div>
        </div>
        <div class="lr-cover-box" data-value="five">
            <div class="lr-cover-img">
                <img class="lr-cover-img1" src="~/Content/images/kanban/Template5-1.png" />
                <img class="lr-cover-img2" src="~/Content/images/kanban/Template5-0.png" />
            </div>
            <div class="lr-cover-info">
                <small>模板五</small>
            </div>
        </div>
        <div class="lr-cover-box" data-value="six">
            <div class="lr-cover-img">
                <div class="blank-space"></div>
            </div>
            <div class="lr-cover-info">
                <small>空模板</small>
            </div>
        </div>
    </div>
</div>
